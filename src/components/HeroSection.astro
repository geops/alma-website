---
import AlmaLogo from "./AlmaLogo.svg";
import AlmaName from "./AlmaName.svg";
import Button from "./Button.astro";
import HeroGraphic from "./HeroGraphic.svg";
import LinkIcon from "./icons/LinkIcon.svg";
import { useTranslations } from "../lib.ts";

const t = useTranslations(Astro.currentLocale);
---

<section class="">
  <div
    class="container mx-auto grid grid-cols-1 md:grid-cols-2 items-center md:pb-10"
  >
    <div class="px-4 pt-32 space-y-5">
      <div
        class="flex items-center gap-2 border border-gray-1 rounded-lg p-2.5 w-fit"
      >
        <AlmaLogo />
        <AlmaName />
      </div>
      <h1>{t("hero.heading")}</h1>
      <p set:html={t("hero.description")} />
      <div
        class="p-4 bg-gray-2 rounded-4xl border border-blue-3 w-fit flex flex-col space-y-2.5"
      >
        <Button class="w-50" href="https://demo.alma-os.ch/" target="demo">
          <LinkIcon />
          {t("hero.demoLink")}
        </Button>
        <Fragment set:html={t("hero.demoCredentials")} />
      </div>
    </div>
    <HeroGraphic class="w-full" />
  </div>
</section>
